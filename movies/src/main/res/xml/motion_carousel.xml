<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:duration="100"
        app:constraintSetEnd="@id/next"
        app:constraintSetStart="@id/start">
        <OnSwipe app:dragDirection="dragLeft"
            app:dragScale="2" />
    </Transition>

    <Transition
        app:duration="100"
        app:constraintSetEnd="@id/previous"
        app:constraintSetStart="@id/start">
        <OnSwipe app:dragDirection="dragRight"
            app:dragScale="2"/>
    </Transition>

    <Transition
        app:duration="100"
        app:constraintSetEnd="@id/prev"
        app:constraintSetStart="@id/previous">
        <OnSwipe app:dragDirection="dragRight"
            app:dragScale="2"/>
    </Transition>

    <Transition
        app:duration="100"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/next">
        <OnSwipe app:dragDirection="dragLeft"
            app:dragScale="2"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/iv3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:elevation="2dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="50dp" />

        <Constraint
            android:id="@+id/iv4"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:elevation="4dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="25dp" />

        <Constraint
            android:id="@+id/iv5"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:elevation="6dp"
            app:layout_constraintCircle="@id/center" />

        <Constraint
            android:id="@+id/iv6"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:elevation="4dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="25dp" />

        <Constraint
            android:id="@+id/iv7"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:elevation="2dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="50dp" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/next">

        <Constraint
            android:id="@+id/iv3"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:elevation="2dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="75dp" />

        <Constraint
            android:id="@+id/iv4"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:elevation="4dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="50dp" />

        <Constraint
            android:id="@+id/iv5"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:elevation="6dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="25dp" />

        <Constraint
            android:id="@+id/iv6"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:elevation="8dp"
            app:layout_constraintCircle="@id/center" />

        <Constraint
            android:id="@+id/iv7"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:elevation="6dp"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="25dp"
            app:layout_constraintCircle="@id/center" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/iv3"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:elevation="2dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="100dp" />

        <Constraint
            android:id="@+id/iv4"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:elevation="4dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="75dp" />

        <Constraint
            android:id="@+id/iv5"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:elevation="6dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="50dp" />

        <Constraint
            android:id="@+id/iv6"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:elevation="8dp"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="25dp"
            app:layout_constraintCircle="@id/center" />

        <Constraint
            android:id="@+id/iv7"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:elevation="10dp"
            app:layout_constraintCircle="@id/center" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/previous">


        <Constraint
            android:id="@+id/iv3"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:elevation="4dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="25dp" />

        <Constraint
            android:id="@+id/iv4"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:elevation="8dp"
            app:layout_constraintCircle="@id/center" />

        <Constraint
            android:id="@+id/iv5"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:elevation="6dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="25dp" />

        <Constraint
            android:id="@+id/iv6"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:elevation="4dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="50dp" />

        <Constraint
            android:id="@+id/iv7"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:elevation="2dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="75dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/prev">


        <Constraint
            android:id="@+id/iv3"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:elevation="10dp"
            app:layout_constraintCircle="@id/center"
            />

        <Constraint
            android:id="@+id/iv4"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:elevation="8dp"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="25dp"
            app:layout_constraintCircle="@id/center" />

        <Constraint
            android:id="@+id/iv5"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:elevation="6dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="50dp" />

        <Constraint
            android:id="@+id/iv6"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:elevation="4dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="75dp" />

        <Constraint
            android:id="@+id/iv7"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:elevation="2dp"
            app:layout_constraintCircle="@id/center"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="100dp" />
    </ConstraintSet>


</MotionScene>