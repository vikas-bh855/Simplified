<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/slide_end"
        app:constraintSetStart="@id/base">
        <OnSwipe app:dragDirection="dragUp" />

        <KeyFrameSet>

            <KeyAttribute
                android:rotation="50"
                app:framePosition="50"
                app:motionTarget="@+id/ivPoster" />
            <KeyAttribute
                android:translationZ="0dp"
                app:framePosition="30"
                app:motionTarget="@+id/ivPoster" />

        </KeyFrameSet>
    </Transition>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/base">
        <OnSwipe
            app:dragDirection="dragRight"
            app:touchAnchorSide="middle"
            app:touchRegionId="@xml/motion_scene2" />


    </Transition>

    <ConstraintSet android:id="@+id/base">
        <Constraint
            android:id="@id/rvMoviesDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/ivPoster"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/ivPoster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPoster" />
        <Constraint
            android:id="@id/tvOverview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/ivPoster"
            app:layout_constraintTop_toBottomOf="@id/ivPoster" />

    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/rvMoviesDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/ivPoster"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:translationZ="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/tvOverview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/ivPoster"
            app:layout_constraintTop_toBottomOf="@id/ivPoster" />

    </ConstraintSet>


    <ConstraintSet android:id="@+id/slide_end">
        <Constraint
            android:id="@id/ivPoster"
            android:layout_width="113dp"
            android:layout_height="150dp"
            android:translationZ="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/ivPoster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/ivPoster" />

        <Constraint
            android:id="@id/tvOverview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/ivPoster"
            app:layout_constraintTop_toBottomOf="@id/ivPoster" />
    </ConstraintSet>

</MotionScene>